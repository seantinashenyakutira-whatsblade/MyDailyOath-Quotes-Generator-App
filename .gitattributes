# Auto detect text files and perform LF normalization
* text=auto

# TypeScript files
*.ts linguist-language=TypeScript
*.tsx linguist-language=TypeScript

# JavaScript files
*.js linguist-language=JavaScript
*.jsx linguist-language=JavaScript

# CSS files
*.css linguist-language=CSS

# JSON files
*.json linguist-language=JSON

# Markdown files
*.md linguist-language=Markdown

# Configuration files
*.config.js linguist-language=JavaScript
*.config.ts linguist-language=TypeScript
postcss.config.js linguist-language=JavaScript
next.config.js linguist-language=JavaScript
tailwind.config.ts linguist-language=TypeScript
tsconfig.json linguist-language=JSON

# Exclude generated files from language stats
package-lock.json linguist-generated=true
yarn.lock linguist-generated=true
pnpm-lock.yaml linguist-generated=true
.next/** linguist-generated=true
out/** linguist-generated=true
node_modules/** linguist-vendored=true

# Ensure proper line endings
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.md text eol=lf




